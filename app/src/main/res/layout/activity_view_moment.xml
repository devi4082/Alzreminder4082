<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.reyna.alzreminder.viewMomentActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:id="@+id/foto"
        android:src="@drawable/ic_face_red_48dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Family"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:editable="false"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/foto"
        android:id="@+id/title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="My Husband (Wilian),My Son (Daniel) \n My Daughhter (Stella)"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/title"
        android:id="@+id/desc"
        android:editable="false"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editMoment"
        android:background="#b70000"
        android:layout_marginTop="30dp"
        android:text="Edit"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/desc"
        android:layout_centerInParent="true"
        />

</RelativeLayout>
